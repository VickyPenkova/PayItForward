@model PayItForward.Web.Models.StoryViewModels.EditStoryViewModel
<h1>Edit</h1>

<form asp-route-returnUrl="@ViewData["ReturnUrl"]" class="form-horizontal" method="post">
    <div class="form-group">
        <label asp-for="@Model.Title" class="control-label col-xs-2"></label>
        <div class="col-xs-10">
            <input asp-for="@Model.Title" class="form-control" />
            <span asp-validation-for="@Model.Title" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Description" class="control-label col-xs-2"></label>
        <div class="col-xs-10">
            <input asp-for="@Model.Description" class="form-control" />
            <span asp-validation-for="@Model.Description" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="@Model.GoalAmount" class="control-label col-xs-2"></label>
        <div class="col-xs-10">
            <input asp-for="@Model.GoalAmount" class="form-control" />
            <span asp-validation-for="@Model.GoalAmount" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="@Model.ExpirationDate" class="control-label col-xs-2"></label>
        <div class="col-xs-10">
            <input asp-for="@Model.ExpirationDate" class="form-control" />
            <span asp-validation-for="@Model.ExpirationDate" class="text-danger"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-lg btn-success btn-block">Submit</button>
</form>



@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}