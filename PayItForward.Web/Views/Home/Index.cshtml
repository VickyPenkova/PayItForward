@{
    ViewData["Title"] = "Home Page";
}
@model PayItForward.Web.Models.HomeViewModel.IndexViewModel
<div class="container-fluid">
    <div class="row equal">
        @using (Html.BeginForm("Index", "Home", FormMethod.Get))
        {
            @Html.Partial("_SearchPartial");
        }
    </div>
    <div class="row equal">
        @foreach (var item in Model.Stories)
        {
            <div class="col-sm-4">
                <div class="thumbnail" style="height: 100%">
                    <img src=@Html.DisplayFor(modelItem => item.ImageUrl) alt="Card image cap">
                    <div class="caption" style="height: 100%;">
                        <h3>@Html.DisplayFor(modelItem => item.Title)</h3>
                        <div class="wrapper equal">
                            <ul class="list-group">
                                <li class="list-group-item">
                                    <span>@Html.DisplayFor(modelItem => item.User.FirstName)</span>
                                    <span>@Html.DisplayFor(modelItem => item.User.LastName)</span>
                                </li>
                                <li class="list-group-item">
                                    <span>@Html.DisplayFor(modelItem => item.Category.Name)</span>
                                </li>
                                <li class="list-group-item">
                                    <span class="alert-danger">@Html.DisplayFor(modelItem => item.ExpirationDate)</span>
                                </li>
                                <li class="list-group-item">
                                    <p>Collected Amount</p>
                                    <i class="small material-icons">attach_money</i>
                                    <span class="lead">@Html.DisplayFor(modelItem => item.CollectedAmount)</span>
                                </li>
                            </ul>
                        </div>
                        <p><a href="/Home/Details/{@item.Id}" class="btn btn-primary wrapper" role="button">Details</a></p>
                    </div>
                </div>
            </div>
        }
    </div>
    @Html.Partial("_PaginationPartial", Model)

</div>
