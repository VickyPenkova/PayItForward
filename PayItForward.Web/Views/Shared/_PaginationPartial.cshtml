@{
    var searchWord = (Model.SearchWord == "" ? "" : "?search=" + Model.SearchWord);
}
<div class="text-center">
    <ul class="pagination">
        @if (Model.CurrentPage > 1)
        {
            <li>
                <a href="/@ViewContext.RouteData.Values["controller"].ToString()/@ViewContext.RouteData.Values["action"].ToString()/@(Model.CurrentPage - 1)@searchWord">
                    &laquo;
                </a>
            </li>
        }

        @for (int i = 1; i < @Model.TotalPages + 1; i++)
        {
            var className = string.Empty;
            if (@Model.CurrentPage == i)
            {
                className = "active";
            }
            <li class=@className>
                <a href="/@ViewContext.RouteData.Values["controller"].ToString()/@ViewContext.RouteData.Values["action"].ToString()/@i@searchWord">
                    @i
                </a>
            </li>
        }

        @if (Model.CurrentPage < Model.TotalPages)
        {
            <li>
                <a href="/@ViewContext.RouteData.Values["controller"].ToString()/@ViewContext.RouteData.Values["action"].ToString()/@(Model.CurrentPage + 1)@searchWord">
                    &raquo;
                </a>
            </li>
        }
    </ul>
</div>
